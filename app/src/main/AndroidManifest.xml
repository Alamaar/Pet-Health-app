<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mad.oamk.pettracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PetTracker">
        <activity
            android:name=".BaseActivity"
            android:exported="false" />
        <activity
            android:name=".Activities_activity"
            android:parentActivityName=".PetView"
            android:exported="false" />
        <activity
            android:name=".Feeding_activity"
            android:parentActivityName=".PetView"
            android:exported="false" />
        <activity
            android:name=".customdata.CustomDataAddActivity"
            android:exported="false" />
        <activity
            android:name=".customdata.CustomDataViewActivity"
            android:parentActivityName=".PetView"
            android:exported="false" />
        <activity
            android:name=".customdata.CustomDataCreateActivity"
            android:exported="false" />
        <activity
            android:name=".UpdatePetActivity"
            android:parentActivityName=".PetView"
            android:exported="false" />
        <activity
            android:name=".AddPetActivity"
            android:exported="false" />
        <activity
            android:name=".DbTestingActivity"
            android:exported="false" />
        <activity
            android:name=".LoginActivity"
            android:exported="false" />
        <activity
            android:name=".PetView"
            android:parentActivityName=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".AddWeightDataActivity"
            android:exported="false" />
        <activity
            android:name=".WeightActivity"
            android:parentActivityName=".PetView"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>